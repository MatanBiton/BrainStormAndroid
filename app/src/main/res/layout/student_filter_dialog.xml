<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">


    <RadioGroup
        android:id="@+id/rdgAttributes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rdBtnFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="FirstName"
            android:text="First Name" />

        <RadioButton
            android:id="@+id/rdBtnLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="LastName"
            android:text="Last Name" />

        <RadioButton
            android:id="@+id/rdBtnId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="Id"
            android:text="ID" />

        <RadioButton
            android:id="@+id/rdBtnCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="City"
            android:text="City" />

        <RadioButton
            android:id="@+id/rdBtnAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="Address"
            android:text="Address" />

        <RadioButton
            android:id="@+id/rdBtnPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="Phone"
            android:text="Phone" />

        <RadioButton
            android:id="@+id/rdBtnBirthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="Birthday"
            android:text="Birthday" />

        <RadioButton
            android:id="@+id/rdBtnEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="Email"
            android:text="Email" />

        <RadioButton
            android:id="@+id/rdBtnExperience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="Experience"
            android:text="Experience" />

        <RadioButton
            android:id="@+id/rdBtnCertification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="Certification"
            android:text="Certification" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rdgAttributes"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btnApply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apply"
            android:backgroundTint="@color/KeyLime"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rdgAttributes"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/btnClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:backgroundTint="@color/pink"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>